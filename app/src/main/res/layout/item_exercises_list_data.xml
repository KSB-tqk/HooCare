<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp">

    <pl.droidsonroids.gif.GifImageView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/exercises_gif_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/jumping_jack_list_data_item" />

    <TextView
        android:id="@+id/exercises_workout_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="JUMPING JACKS"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/exercises_gif_image"
        app:layout_constraintTop_toTopOf="@id/exercises_gif_image" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:text="00:20"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="@id/exercises_workout_title"
        app:layout_constraintTop_toBottomOf="@id/exercises_workout_title" />
</androidx.constraintlayout.widget.ConstraintLayout>